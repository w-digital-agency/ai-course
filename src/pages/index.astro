---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Hero from '../components/Hero.astro';
import Services from '../components/Services.astro';
import Testimonials from '../components/Testimonials.astro';
import Contact from '../components/Contact.astro';
---

<Layout 
  title="WDigital - AI Consultation & Digital Agency | Streamline Your Digital Workflow"
  description="Leading AI-powered digital marketing agency in Hong Kong. We help businesses automate workflows, optimize performance marketing, and accelerate growth with cutting-edge AI solutions."
  keywords="AI digital marketing Hong Kong, performance marketing agency, business automation, digital transformation, marketing automation, AI consultation"
  structuredData={{
    "@context": "https://schema.org",
    "@type": "LocalBusiness",
    "name": "WDigital",
    "description": "AI-powered digital marketing agency specializing in performance marketing and business automation in Hong Kong.",
    "url": "https://www.wdigital.tech",
    "telephone": "+852-XXXX-XXXX",
    "address": {
      "@type": "PostalAddress",
      "addressLocality": "Hong Kong",
      "addressCountry": "HK"
    },
    "openingHours": "Mo-Fr 09:00-18:00",
    "priceRange": "$$",
    "serviceArea": {
      "@type": "Place",
      "name": "Hong Kong"
    }
  }}
>
  <Header />
  <main>
    <Hero />
    <Services />
    <Testimonials />
    <Contact />
  </main>
</Layout>